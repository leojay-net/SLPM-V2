{
    "name": "@slpm/sdk",
    "version": "1.0.0",
    "description": "Starknet Lightning Privacy Mixer SDK - Privacy-preserving cross-chain swaps",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./privacy": {
            "types": "./dist/privacy/index.d.ts",
            "import": "./dist/privacy/index.mjs",
            "require": "./dist/privacy/index.js"
        },
        "./swaps": {
            "types": "./dist/swaps/index.d.ts",
            "import": "./dist/swaps/index.mjs",
            "require": "./dist/swaps/index.js"
        },
        "./cashu": {
            "types": "./dist/cashu/index.d.ts",
            "import": "./dist/cashu/index.mjs",
            "require": "./dist/cashu/index.js"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "lint": "eslint src",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "starknet",
        "lightning",
        "privacy",
        "mixer",
        "zk-proofs",
        "cashu",
        "cross-chain",
        "swap",
        "zcash",
        "bitcoin"
    ],
    "author": "SLPM Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/slpm/sdk"
    },
    "dependencies": {
        "starknet": "^6.11.0",
        "@cashu/cashu-ts": "^1.0.0",
        "@noble/hashes": "^1.3.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/uuid": "^9.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0",
        "vitest": "^1.0.0"
    },
    "peerDependencies": {
        "starknet": ">=6.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}